
body
  color: #555
  background-color: #ffe

#book
  width: 350px
  margin: 0 auto
  padding: 0 10px
  border: 1px solid #aaa
  border-width: 0 1px

  .chapter
    margin-bottom: 20px

    h2
      text-align: center

    .chapter-number
      float: left
      margin-left: 5px
      margin-right: 10px
      font-size: 36px
      line-height: 36px
      font-weight: bold
    
    &.single-chapter .chapter-number
      display: none

    .verse
      
      .verse-number
        margin: 0 8px
        position: relative
        top: -3px
        font-size: 70%
        font-style: italic
        font-family: sans-serif

    &:not(.single-chapter) .verse.first .verse-number
      display: none

